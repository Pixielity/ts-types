{
  "name": "@pixielity/ts-types",
  "version": "1.0.4",
  "description": "A powerful TypeScript types library with full type safety, decorator support, and flexible configuration",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"**/*.ts\"",
    "format": "prettier --write \"**/*.ts\"",
    "docs": "typedoc --out docs src",
    "prepare-husky": "husky",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A",
    "postversion": "git push && git push --tags",
    "changeset": "changeset",
    "version-packages": "changeset version && git add . && git commit -m \"Version Packages\"",
    "release": "npm run build && changeset publish",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixielity/ts-types.git"
  },
  "keywords": [
    "typescript",
    "ts-types",
    "types",
    "class-transformer",
    "dto",
    "validation",
    "transformation"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pixielity/ts-types/issues"
  },
  "homepage": "https://github.com/pixielity/ts-types#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.3",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@jest/globals": "^29.7.0",
    "@types/cli-progress": "^3.11.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.12",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.4",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "dependencies": {
    "next": "^15.3.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "peerDependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0"
  },
  "peerDependenciesMeta": {
    "class-transformer": {
      "optional": true
    },
    "class-validator": {
      "optional": true
    }
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
